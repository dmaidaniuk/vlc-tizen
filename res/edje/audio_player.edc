collections {
   base_scale: 1.8;
   group { 
      name: "audio_player";
      parts {
         part{
            name: "hub_background";
            type: RECT;
            description {
               color: 250 250 250 255;
               state: "default" 0.0;
               rel1{relative: 0.0 0.0;}
               rel2{relative: 1.0 1.0;}
               }
            }
         part {
            name: "hub_header";
            type: RECT;
            description {
               state: "default" 0.0;
               color: 250 250 250 255;
               rel1 {relative: 0.0 0.0;}
               rel2 {relative: 1.0 0.1;}
               }
            part {
               name: "switch_cover_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.7 .0.0;}
                  rel2 {relative: 0.8 1.0;}
               }
            }
            part {
               name: "save_playlist_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.8 .0.0;}
                  rel2 {relative: 0.9 1.0;}
               }
            }
            part {
               name: "more_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.9 .0.0;}
                  rel2 {relative: 1.0 1.0;}
               }
            }
            part {
               name: "title_text";
               type: TEXT;
               description {
                  state: "default" 0.0;
                  color: 33 33 33 255;
                  rel1 {
                     relative: 0.015 0.0;
                     to: "hub_header";
                  }
                  rel2 {
                     relative: 0.7 0.5;
                     to: "hub_header";
                  }
                  text {
                     align: 0.00 1.0;
                     size: 28;
                     text: "Unknown";
                     ellipsis: 0;
                  }
               }
            }
            part {
               name: "subtitle_text";
               type: TEXT;
               description {
                  state: "default" 0.0;
                  color: 33 33 33 255;
                  rel1.relative: 0.015 0.5;
                  rel2.relative: 0.7 1.0;
                  text {
                     align: 0.00 0.0;
                     size: 28;
                     text: "Unknown";
                     ellipsis: 0;
                     font: "Sans:style=Bold";
                  }
               }
            }
         }

         part {
               name: "hub_cover";
               type: RECT;
               description {
                  state: "default" 0.0;
                  rel1 {
                     relative: 0.0 1.0;
                     to: "hub_header";
                  }
                  rel2 {
                     relative: 1.0 0.0;
                     to: "hub_miniplayer";
                  }
               }
         }
         part {
               name: "cover";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1{
                      relative: 0.05 0.05;
                      to: "hub_cover";
                  }
                  rel2{
                      relative: 0.95 0.95;
                      to: "hub_cover";
                  }
                  aspect: 1.0 1.0;
                  aspect_preference: BOTH;
               }
            }

            part {
            name: "hub_miniplayer";
            type: RECT;
            description {
               state: "default" 0.0;
               color: 250 250 250 255;
               rel1 {
                  relative: 0.0 0.86;
                  to: "hub_background";
               }
               rel2 {
                  relative: 1.0 1.0;
                  to: "hub_background";
               }
            }
            part {
               name: "seek";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.0 0.0;}
                  rel2 {relative: 1.0 0.4;}
               }
            }
            part {
               name: "shuffle_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.0 0.4;}
                  rel2 {relative: 0.1 1.0;}
               }
            }
            part {
               name: "previous_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.33 0.4;}
                  rel2 {relative: 0.43 1.0;}
               }
               description {
                  state: "hidden" 0.0;
                  inherit: "default" 0.0;
                  visible: 0;
               }
            }
            part {
               name: "play_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.45 0.4;}
                  rel2 {relative: 0.55 1.0;}
               }
            }
            part {
               name: "next_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.57 0.4;}
                  rel2 {relative: 0.67 1.0;}
               }
               description {
                  state: "hidden" 0.0;
                  inherit: "default" 0.0;
                  visible: 0;
               }
            }
            part {
               name: "repeat_button";
               type: SWALLOW;
               description {
                  state: "default" 0.0;
                  rel1 {relative: 0.9 0.4;}
                  rel2 {relative: 1.0 1.0;}
               }
            }

            programs {
               program {
                  name: "previous_button,hide";
                  signal: "previous_button,hide";
                  source: "";
                  action: STATE_SET "hidden" 0.0;
                  target: "previous_button";
               }
               program {
                  name: "previous_button,show";
                  signal: "previous_button,show";
                  source: "";
                  action: STATE_SET "default" 0.0;
                  target: "previous_button";
               }
               program {
                  name: "next_button,hide";
                  signal: "next_button,hide";
                  source: "";
                  action: STATE_SET "hidden" 0.0;
                  target: "next_button";
               }
               program {
                  name: "next_button,show";
                  signal: "next_button,show";
                  source: "";
                  action: STATE_SET "default" 0.0;
                  target: "next_button";
               }
            }
   }
}