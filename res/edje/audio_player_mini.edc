collections
{
    base_scale: 1.8;
    group
    {
        name: "audio_player";
      parts {
            part{
                name: "hub_background";
                type: RECT;
                description{
                    state: "default" 0.0;
                    color: 245 245 245 255; // grey
                    aspect: 7.0 15.0;
                    aspect_preference: HORIZONTAL;
                    min: 0 80;
                }
            }
            part{
                name: "swallow.progress";
                type: SWALLOW;
                description {
                    rel1 {
                       relative: 0.0 0.0;
                       to: "hub_background";
                    }
                    rel2 {
                       relative: 1.0 0.2;
                       to: "hub_background";
                    }
                }
           }
            part{
                name: "hub_button";
                type: RECT;
                description{
                    visible: 0;
                    rel1{
                        relative: 0.0 0.2;
                        offset: 0 5;
                        to: "hub_background";
                    }
                    rel2{
                        relative: 0.8 0.95;
                        to: "hub_background";
                    }
                }
            }
            part {
                name: "title_text";
                type: TEXT;
                description {
                    color: 0 0 0 255; // black
                    visible: 1;
                    rel1 {
                        relative: 1.1 0.0;
                        to: "cover";
                    }
                    rel2 {
                        relative: 0.0 0.5;
                        to: "swallow.previous";
                    }
                     text {
                        text: "<title>";
                        size: 22;
                        ellipsis: 0;
                        align: 0 0;
                    }
                }
            }
            part {
                name: "subtitle_text";
                type: TEXT;
                description {
                    color:  70 70 70 255; // grey/black
                    rel1 {
                        relative: 1.1 0.5;
                        to: "cover";
                    }
                    rel2 {
                        relative: 0.0 1.0;
                        to: "swallow.previous";
                    }
                    text {
                        text: "<artist>";
                        size: 20;
                        ellipsis: 0;
                        align: 0 0;
                    }
                }
            }
            part {
                name: "cover";
                type: SWALLOW;
                description {
                    aspect: 1.0 1.0;
                    aspect_preference: VERTICAL;
                    color: 255 0 0 255; // transparent grey
                    align: 0 0;
                    rel1 {
                        relative: 0.0 0.0;
                        to: "hub_button";
                    }
                    rel2 {
                        relative: 0.15 1.0;
                        to: "hub_button";
                        to_x: "hub_button";
                        to_y: "hub_button";
                    }
                }
            }
            part {
                name: "expand_region";
                type: RECT;
                description {
                    color: 0 0 0 0; // transparent
                    rel1 {
                        relative: 0.0 0.2;
                        to: "hub_background";
                   }
                    rel2 {
                        relative: 0.0 1.1;
                        to: "swallow.previous";
                   }
                }
            }
            part {
                name: "swallow.previous";
                type: SWALLOW;
                description {
                    aspect: 0.9 0.9;
                    aspect_preference: VERTICAL;
                    color: 255 0 0 255; // transparent grey
                    rel1 {
                        relative: -2.0 0.0;
                        to: "swallow.play";
                    }
                    rel2 {
                        relative: 1.0 1.0;
                        to: "swallow.play";
                    }
                }
            }
            part {
                name: "swallow.play";
                type: SWALLOW;
                description {
                    aspect: 0.9 0.9;
                    aspect_preference: VERTICAL;
                    color: 255 0 0 255; // transparent grey
                    rel1 {
                        relative: -2.0 0.0;
                        to: "swallow.next";
                    }
                    rel2 {
                        relative: 1.0 1.0;
                        to: "swallow.next";
                    }
                }
            }
            part {
                name: "swallow.next";
                type: SWALLOW;
                description {
                    aspect: 0.9 0.9;
                    aspect_preference: VERTICAL;
                    color: 255 0 0 255; // transparent grey
                    align: 0.5 0.5;
                    rel1 {
                        relative: 1.0 0.0;
                        to_y: "hub_button";
                        offset: -100 0;
                    }
                    rel2 {
                        relative: 1.0 1.0;
                        to_y: "hub_button";
                    }
                }
            }
        } //parts
    }
}
